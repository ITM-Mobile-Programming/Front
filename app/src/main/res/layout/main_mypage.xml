<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMypage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_basic"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_mypage_id"
                    android:text="your id"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_mypage_name"
                    android:text="your name"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_mypage_email"
                android:layout_marginTop="10dp"
                android:text="your email"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_mypage_profileFix"
                android:layout_marginTop="10dp"
                android:text="내 정보 수정"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp">

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/main_mypage_wholeMBTI"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/main_mypage_monthlyMBTI"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <Button
            android:id="@+id/main_button_diaryList"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="일기 목록"
            android:textSize="12sp" />

        <Button
            android:id="@+id/main_button_diaryWrite"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="일기 작성"
            android:textSize="12sp" />

        <Button
            android:id="@+id/main_button_diaryShare"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="친구와 공유"
            android:textSize="10sp" />

        <Button
            android:id="@+id/main_button_myPage"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="마이 페이지"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>