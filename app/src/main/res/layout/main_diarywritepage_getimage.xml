<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".writeNew.MainDiaryWritepageGetImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이미지 생성"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="설정된 해시태그"
            android:textSize="20dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/writeImageReload"
            android:layout_marginRight="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/oval_button"
            android:src="@drawable/remake"/>

    </LinearLayout>

    <TextView
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/main_diarywritepageGetImage_showHashtag"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="여기에 해시태그가 표시됩니다."
        android:background="@drawable/outline"/>



    <ImageView
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="370dp"
        android:layout_margin="20dp"
        android:id="@+id/main_diarywritepage_second_showImage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 당신의 기분을 알려주세요"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:id="@+id/main_diarywritepage_secondfragment_btn"
        android:background="@drawable/rectangle_button"/>


</LinearLayout>

    <ProgressBar
        android:id="@+id/main_diarywritepage_GetImage_progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</FrameLayout>