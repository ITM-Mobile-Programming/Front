<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginSigninpage"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="30dp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="nick_name"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/login_signinpage_nick_nameSigninArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="아이디를 입력해주세요" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="전화번호"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/login_signinpage_phoneNumberSigninArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="전화번호를 입력해주세요" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="Self_ShortIntro"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/login_signinpage_Self_ShortIntroSigninArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="주소를 입력해주세요" />

    </LinearLayout>

    <Button
        android:id="@+id/login_signinpage_signinBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="이미지 등록" />

</LinearLayout>