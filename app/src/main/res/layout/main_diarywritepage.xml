<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainDiaryWritepage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_diarywritepage_diary"
            tools:listitem="@layout/main_diaryformat">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_diarywritepage_writeDiary"
        android:text="다이어리 작성"
        android:layout_margin="10dp"
        android:layout_gravity="right"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="일기 목록"
            android:textSize="12sp"
            android:id="@+id/main_button_diaryList"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="일기 작성"
            android:textSize="12sp"
            android:id="@+id/main_button_diaryWrite"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="친구와 공유"
            android:textSize="10sp"
            android:id="@+id/main_button_diaryShare"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="마이 페이지"
            android:textSize="12sp"
            android:id="@+id/main_button_myPage"
            />

    </LinearLayout>


</LinearLayout>